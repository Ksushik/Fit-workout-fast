<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_program_runner"
    android:name="tab_program_runner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/layoutProgramRunner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:animateLayoutChanges="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scrollbars="vertical">

        <TextView
            android:text="@string/program_selection"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <Spinner
            android:id="@+id/programSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/mi_baseline"
            android:padding="2dp"
            style="@style/TextAppearance.AppCompat.Large" />
        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imageMachine"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center"
                        app:srcCompat="@drawable/ic_machine"
                        app:civ_background_color="@color/record_background_even"
                        app:civ_border_width="0dp"
                        app:civ_shadow="false" />

                    <AutoCompleteTextView
                        android:id="@+id/editMachine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toStartOf="@+id/buttonListMachine"
                        android:layout_toEndOf="@+id/imageMachine"
                        android:hint="@string/MachineHint"
                        android:imeOptions="actionNext"
                        android:inputType="text|textCapWords|textAutoComplete|textNoSuggestions|textVisiblePassword"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/buttonListMachine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:baselineAlignBottom="false"
                        android:cropToPadding="false"
                        app:srcCompat="@drawable/list"
                        android:contentDescription="TODO" />

                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/bodybuildingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="visible">

            <!-- SETS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewSerie"
                style="@style/CardViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:visibility="visible"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/SerieLabel" />

                    <EditText
                        android:id="@+id/editSerie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number"
                        android:minEms="2"
                        tools:text="2" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- REPS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewRepetition"
                style="@style/CardViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:visibility="visible"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--android:layout_weight="40"-->
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/RepetitionLabel_short" />

<!--                    <it.sephiroth.android.library.numberpicker.NumberPicker-->
<!--                        app:picker_max="100"-->
<!--                        app:picker_min="0"-->
<!--                        android:progress="10"-->
<!--                        app:picker_stepSize="1"-->
<!--                        app:picker_tracker="exponential"-->
<!--                        app:picker_orientation="vertical"-->
<!--                        android:id="@+id/numberPicker"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content" />-->
<!--                    <it.sephiroth.android.library.numberpicker.NumberPicker-->
<!--                        style="@style/NumberPicker.Filled"-->
<!--                        app:picker_max="100"-->
<!--                        app:picker_min="0"-->
<!--                        android:progress="50"-->
<!--                        app:picker_stepSize="1"-->
<!--                        app:picker_tracker="exponential"-->
<!--                        app:picker_orientation="horizontal"-->
<!--                        android:id="@+id/repsPicker"-->
<!--                        android:minHeight="@dimen/mi_button_cta_height"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        />-->

<!--                    android:progress="50"-->

                    <it.sephiroth.android.library.numberpicker.NumberPicker
                        android:id="@+id/numberPicker"
                        android:gravity="center"
                        app:picker_max="100"
                        app:picker_min="0"
                        app:picker_stepSize="1"
                        app:picker_tracker="exponential"
                        app:picker_orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
<!--                                        <EditText-->
<!--                        android:id="@+id/editRepetition"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:gravity="center"-->
<!--                        android:inputType="number"-->
<!--                        android:minEms="2"-->
<!--                        android:textSize="18sp"-->
                        tools:text="10" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECONDS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewSeconds"
                style="@style/CardViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--android:layout_weight="40"-->
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/SecondsLabel_short" />

                    <EditText
                        android:id="@+id/editSeconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number"
                        android:minEms="2"
                        android:textSize="18sp"
                        tools:text="10" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- WEIGHT -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewWeight"
                style="@style/CardViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:visibility="visible"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/poidsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/PoidsLabel" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editPoids"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal|numberSigned"
                            android:minEms="3"
                            tools:text="10" />

                        <Spinner
                            android:id="@+id/spinnerUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/weight_units"
                            android:minEms="3" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/minmaxLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="10"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/min" />

                        <TextView
                            android:id="@+id/minText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            tools:text="40 kg" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingStart="20dp"
                            android:paddingEnd="5dp"
                            android:text="@string/max" />

                        <TextView
                            android:id="@+id/maxText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            tools:text="80 kg" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- DISTANCE -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewDistance"
                style="@style/CardViewStyle"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textDistance"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/DistanceLabel" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal|numberSigned"
                            android:minEms="3"
                            android:hint="@string/DistanceLabel"
                            tools:text="10" />

                        <Spinner
                            android:id="@+id/spinnerDistanceUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/distance_units"
                            android:minEms="3" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- DURATION -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewDuration"
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textDuration"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/DurationLabel" />

                    <TextView
                        android:id="@+id/editDuration"
                        style="@style/editableTextView"
                        tools:text="01:23:45">

                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/notesInExercise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="text"
                    android:tooltipText="@string/NotesLabel"
                    android:hint="@string/NotesLabel"
                    />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/notesLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">





                    <LinearLayout
                        android:id="@+id/restTimeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:layout_weight="100"
                            android:text="@string/activate_rest_time" />

                        <CheckBox
                            android:id="@+id/restTimecheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:checked="true"
                            android:text="" />

                        <TextView
                            android:id="@+id/restTimeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:layout_weight="100"
                            android:text="@string/rest_time" />

                        <EditText
                            android:id="@+id/editRestTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:ems="4"
                            android:inputType="number"
                            android:singleLine="true"
                            android:text="60" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textFonteNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="8dp"
                            android:gravity="start"
                            android:text="@string/NotesLabel" />

                        <EditText
                            android:id="@+id/editFonteNote"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:height="40dp"
                            android:ems="10"
                            android:hint="@string/NotesLabel"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:maxLines="5"
                            android:minHeight="40dp"
                            android:minLines="2" />

                    </LinearLayout>
                </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/previousExerciseArrow"
                    style="@style/Widget.AppCompat.Button.AddButton"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left|center"
                    android:layout_marginStart="0dp"
                    android:baselineAlignBottom="false"
                    android:contentDescription="preciousArrow"
                    android:cropToPadding="false"
                    android:text="@string/arrowPreviousAsText" />

                <Button
                    android:id="@+id/addperff"
                    style="@style/Widget.AppCompat.Button.AddButton"
                    android:layout_width="299dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/nextExerciseArrow"
                    android:layout_toEndOf="@+id/previousExerciseArrow"
                    android:text="@string/AddLabel" />

                <Button
                    android:id="@+id/nextExerciseArrow"
                    style="@style/Widget.AppCompat.Button.AddButton"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center|left"
                    android:contentDescription="nextExerciseArrow"
                    android:text="@string/arrowNextAsText" />

            </RelativeLayout>



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="3dp"
                android:text="@string/TopTenLabel" />

        </LinearLayout>

        <com.easyfitness.utils.ExpandedListView
            android:id="@+id/listRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="false"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fastScrollEnabled="false"
            android:isScrollContainer="false"
            android:scrollbars="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/automatic_time" />

            <CheckBox
                android:id="@+id/autoTimeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:checked="true"
                android:text="" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="50"
                android:gravity="right|end"
                android:text="@string/DateLabel" />

            <TextView
                android:id="@+id/editDate"
                tools:text="10/05/20"
                style="@style/editableTextView"
                android:enabled="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="100"
                android:gravity="right"
                android:text="@string/timeLabel" />

            <TextView
                android:id="@+id/editTime"
                style="@style/editableTextView"
                tools:text="18:26:10"
                android:enabled="false"/>
        </LinearLayout>
    </LinearLayout>


</ScrollView>
